<Window x:Class="DATApp.MVVM.View.Brugere"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DATApp.MVVM.View"
        mc:Ignorable="d"
        Title="Brugere" Height="450" Width="800">
    
    <StackPanel Margin = "20" >

        <Label Content = "Indtast Navn:" />

        <TextBox Text = "{Binding Navn, UpdateSourceTrigger=PropertyChanged}" />

        <Label Content = "Indtast E-mail:" />

        <TextBox Text = "{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

        <Label Content = "Indtast Adgangskode:" />

        <TextBox Text = "{Binding Password, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Vælg Brugertype" />
        <ComboBox x:Name="BrugerTypeDropDown" SelectionChanged="BrugerTypeDrowDown_SelectionChanged"  SelectedIndex="0" Padding="2">
            <ComboBoxItem>Klient bruger</ComboBoxItem>
            <ComboBoxItem>Admin bruger</ComboBoxItem>
        </ComboBox>

        
        <Button Content = "Tilføj Bruger" Command = "{Binding AddUserCommand}" Margin = "0,10,0,0" />


        <ListBox ItemsSource = "{Binding Users}" DisplayMemberPath = "Name" Height = "100" Margin = "0,10,0,0" />

    </StackPanel >
</Window>
