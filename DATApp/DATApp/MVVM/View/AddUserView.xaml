<Window x:Class="DATApp.MVVM.View.AddUserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DATApp.MVVM.View"
        xmlns:viewModel="clr-namespace:DATApp.MVVM.ViewModel"
        mc:Ignorable="d"
        >
    
    <Window.DataContext>
        <viewModel:UsersViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Label Content = "Navn:" Margin="234,93,234,315" />
        <TextBox Text = "{Binding Name}" Margin="234,119,234,297" />
        <Label Content = "E-mail:" Margin="234,137,234,271" />
        <TextBox Text = "{Binding Email}" Margin="234,163,234,253" />
        <Label Content = "Adgangskode:" Margin="234,181,234,229" />
        <TextBox Text = "{Binding Password}" Margin="234,210,234,206"/>
        <TextBlock Text="Brugertype" Margin="234,229,234,190" />
        <ComboBox x:Name="BrugerTypeDropDown" SelectedValue="{Binding IsAdmin}" SelectedValuePath="Tag" Padding="2" Margin="234,250,234,0" Height="22" VerticalAlignment="Top">
            <ComboBoxItem Content="Klient bruger" Tag="False"/>
            <ComboBoxItem Content="Admin bruger" Tag="True"/>
        </ComboBox>
        <Button Content="Add User" Command="{Binding AddUserCommand}" Margin="350,319,350,85"/>

    </Grid>
</Window>
