<Window x:Class="DATApp.MVVM.View.AddUserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DATApp.MVVM.View"
        xmlns:viewModel="clr-namespace:DATApp.MVVM.ViewModel"
        mc:Ignorable="d"
        Width="300"
        Height="350"
        >
    
    <Window.DataContext>
        <viewModel:UsersViewModel/>
    </Window.DataContext>
    
    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height=" 200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Stretch">
            <Label Content = "Navn:" />
            <TextBox Text = "{Binding Name}" />
            <Label Content = "E-mail:" />
            <TextBox Text = "{Binding Email}" />
            <Label Content = "Adgangskode:" />
            <TextBox Text = "{Binding Password}" />
            <TextBlock Text="Brugertype"  />
            <ComboBox x:Name="BrugerTypeDropDown" SelectedValue="{Binding IsAdmin}" SelectedValuePath="Tag" Padding="2" VerticalAlignment="Top">
                <ComboBoxItem Content="Klient bruger" Tag="False"/>
                <ComboBoxItem Content="Admin bruger" Tag="True"/>
            </ComboBox>

        </StackPanel>

        <Button Grid.Row="1" Height="25" Width="25" Content="Add User" Command="{Binding AddUserCommand}"/>

    </Grid>
</Window>
