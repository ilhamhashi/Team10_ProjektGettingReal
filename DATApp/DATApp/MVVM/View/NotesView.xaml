<UserControl x:Class="DATApp.MVVM.View.NotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DATApp.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <ListBox ItemsSource="{Binding Notes}"
             SelectedItem="{Binding SelectedNote}"
             DisplayMemberPath="Name"
             Height="100" Width="300"/>

            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Note Name:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding SelectedNote.Name, UpdateSourceTrigger=PropertyChanged}" 
             Width="300" Margin="0,0,0,10"/>
                
                <TextBlock Text="Note Content:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding SelectedNote.NoteContent, UpdateSourceTrigger=PropertyChanged}" 
             Height="200" AcceptsReturn="True" TextWrapping="Wrap" Width="600"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add Note" Command="{Binding AddNoteCommand}" Width="100" Margin="5"/>
                <Button Content="Delete Note" Command="{Binding DeleteNoteCommand}" Width="100" Margin="5"/>
                <Button Content="Save Note" Command="{Binding SaveNoteCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
