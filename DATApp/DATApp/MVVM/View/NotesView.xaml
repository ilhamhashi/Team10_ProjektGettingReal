<UserControl x:Class="DATApp.MVVM.View.NotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DATApp.MVVM.View"
             xmlns:viewmodel="clr-namespace:DATApp.MVVM.ViewModel"             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel:NotesViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" >
            <ListBox ItemsSource="{Binding Notes}"
             SelectedItem="{Binding SelectedNote}"
             DisplayMemberPath="Name"
             Width="300"
             Height="150"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
                <TextBlock Text="Note Name:" Margin="0,5,0,0"/>
                <TextBox  Text="{Binding SelectedNote.Name, UpdateSourceTrigger=PropertyChanged}" 
             Width="300" Margin="0,0,0,10"/>
         </StackPanel>

        <StackPanel  Grid.Row="2" >
                <TextBlock Text="Note Content:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding SelectedNote.NoteContent, UpdateSourceTrigger=PropertyChanged}" 
              AcceptsReturn="True" TextWrapping="Wrap" Width="600"/>
            </StackPanel>
            
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button Content="Add Note" Command="{Binding AddNoteCommand}" Width="100" Margin="5"/>
                <Button Content="Delete Note" Command="{Binding DeleteNoteCommand}" Width="100" Margin="5"/>
                <Button Content="Save Changes" Command="{Binding SaveNoteCommand}" Width="100" Margin="5"/>
            </StackPanel>
       
    </Grid>
</UserControl>
