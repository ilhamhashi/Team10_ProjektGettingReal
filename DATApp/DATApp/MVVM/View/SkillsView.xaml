<UserControl x:Class="DATApp.MVVM.View.SkillsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DATApp.MVVM.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:SkillsViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <!-- This row takes the remaining space for ListBox -->
        </Grid.RowDefinitions>

        <TextBlock Text="Søge funktion"
                   FontSize="24"
                   FontWeight="Bold"
                   Grid.Row="0" />

        <!-- Search Section -->
        <StackPanel Orientation="Horizontal" Margin="0,10" Grid.Row="1">
            <TextBox Width="300"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Margin="0,0,10,0"
                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" />

            <Button Content="Search"
                    Width="100"
                    Height="30"
                    Command="{Binding SearchCommand}" />
        </StackPanel>

        <!-- Add Section -->
        <GroupBox Header="Tilføj Færdighed" Margin="0,10,0,10" Grid.Row="2">
            <StackPanel Margin="10" Orientation="Vertical">
                <TextBlock Text="Navn" />
                <TextBox Text="{Binding NewSkillName}" Margin="0,5,0,10" />

                <TextBlock Text="Beskrivelse" />
                <TextBox Text="{Binding NewSkillDescription}" Margin="0,5,0,10" />

                <TextBlock Text="Niveau" />
                <ComboBox SelectedItem="{Binding NewSkillLevel}" 
                          ItemsSource="{Binding Levels}" 
                          Margin="0,5,0,10" />

                <TextBlock Text="Følelse" />
                <ItemsControl ItemsSource="{Binding EmotionalStates}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding}"
                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                      Margin="5,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="Add Skill"
                        Width="120"
                        Margin="0,10,0,0"
                        Command="{Binding AddCommand}" />
            </StackPanel>
        </GroupBox>

        <!-- Results List with ScrollViewer -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding SearchResults}"
                     HorizontalAlignment="Stretch"
                     Margin="0,10,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5" Orientation="Vertical">
                            <TextBlock Text="{Binding Description}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Category}" FontStyle="Italic" FontSize="12" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ID: " FontSize="12" />
                                <TextBlock Text="{Binding ID}" FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
