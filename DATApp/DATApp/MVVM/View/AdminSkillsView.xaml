<UserControl x:Class="DATApp.MVVM.View.AdminSkillsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:DATApp.MVVM.ViewModel"
             xmlns:controls="clr-namespace:DATApp.MVVM.View.Controls"             
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:SkillsViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>

        <!-- Search TextBox -->
        <StackPanel>
            <Button Content="Tilføj Note" Command="{Binding OpenAddNoteCommand, UpdateSourceTrigger=PropertyChanged}" Height="25" Width="100" HorizontalAlignment="Left"/>
            <Label Content="Søg"/>
            <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"/>
         </StackPanel>

        <!-- Results List with ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding SkillsCollectionView, UpdateSourceTrigger=PropertyChanged}"
                     SelectedItem="{Binding SelectedSkill, UpdateSourceTrigger=PropertyChanged}"
                     HorizontalAlignment="Stretch"
                     Margin="20,10,30,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5" Orientation="Vertical">
                            <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" FontStyle="Italic" FontSize="12" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Number: " FontSize="12" />
                                <TextBlock Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}" FontSize="12" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Module: " FontSize="12" />
                                <TextBlock Text="{Binding Module.Name, UpdateSourceTrigger=PropertyChanged}" FontSize="12" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Level: " FontSize="12" />
                                <TextBlock Text="{Binding Level, UpdateSourceTrigger=PropertyChanged}" FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <controls:AdminEditSkillPanel
            Grid.RowSpan="2"
            Grid.Column="1"/>

        
    </Grid>
</UserControl>
