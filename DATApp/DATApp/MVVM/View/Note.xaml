<Window x:Class="DATApp.MVVM.View.Note"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DATApp.MVVM.ViewModel"
        Title="Notes" Height="350" Width="525">
    <Grid Margin="10">
        <StackPanel>
            <ListBox ItemsSource="{Binding Notes}"
                     SelectedItem="{Binding SelectedNote}"
                     DisplayMemberPath="Name"
                     Height="200"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add Note" Command="{Binding AddNoteCommand}" Width="100" Margin="5"/>
                <Button Content="Delete Note" Command="{Binding DeleteNoteCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>