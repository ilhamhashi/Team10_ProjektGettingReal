<UserControl x:Class="DATApp.MVVM.View.Controls.BaseMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DATApp.MVVM.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        
        <Menu Background="LightBlue">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Forside"
            Height="50"
            Foreground="Black"
            FontSize="14"
            Margin="0,0,15,0"
            Command="{Binding HomeViewCommand}"/>

            <MenuItem Header="Færdigheder"
            Height="50"
            Foreground="Black"
            FontSize="14"
            BorderThickness="0"
            Margin="0,0,15,0"
            Command="{Binding SkillsViewCommand}"/>

            <MenuItem Header="Moduler"
            Height="50"
            Foreground="Black"
            FontSize="14"
            BorderThickness="0"
            Margin="0,0,15,0"
            Command="{Binding ModulesViewCommand}" />

            <MenuItem Header="Log ind"
                      Foreground="Black"
                      FontSize="14"
                      Height="50"
                      Command="{Binding LoginViewCommand}"/>

        </Menu>
    </Grid>

</UserControl>
