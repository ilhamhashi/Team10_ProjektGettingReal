<UserControl x:Class="DATApp.MVVM.View.Controls.BaseMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DATApp.MVVM.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Forside"
                      Foreground="Black"
                      FontSize="14"
                      Command="{Binding HomeViewCommand}"/>

            <MenuItem Header="DAT-Match"
                      Foreground="Black"
                      FontSize="14"
                      Command="{Binding DatMatchViewCommand}"/>

            <MenuItem Header="Færdigheder"
                      Foreground="Black"
                      FontSize="14"
                      Command="{Binding SkillsViewCommand}"/>

            <MenuItem Header="Moduler"
                      Foreground="Black"
                      FontSize="14"
                      Command="{Binding ModulesViewCommand}"/>

        </Menu>
    </Grid>

</UserControl>
