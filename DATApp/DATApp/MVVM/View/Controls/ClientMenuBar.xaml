<UserControl x:Class="DATApp.MVVM.View.Controls.ClientMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DATApp.MVVM.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Forside"
            Height="50"
            Foreground="Black"
            FontSize="14"
            Command="{Binding HomeViewCommand}"/>

            <MenuItem Header="DAT-Match"
            Height="50"
            Foreground="Black"
            FontSize="14"/>

            <MenuItem Header="Færdigheder"
            Height="50"
            Foreground="Black"
            FontSize="14"/>

            <MenuItem Header="Moduler"
            Height="50"
            Foreground="Black"
            FontSize="14"/>

            <MenuItem Header="Min Konto"
                      Height="50"
                      Foreground="Black"
                      FontSize="14">
                <MenuItem Header="Client Client"/>
                <MenuItem Header="Administrer Noter"/>
            </MenuItem>

        </Menu>
    </Grid>
    
</UserControl>
