<UserControl x:Class="DATApp.MVVM.View.Controls.AdminEditModulePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DATApp.MVVM.View.Controls"
             xmlns:viewModel="clr-namespace:DATApp.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="180">

    <Grid Margin="10,0,5,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Label Content = "Name:"/>
            <TextBox Height="25" Text = "{Binding SelectedModule.Name, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content = "Description:" />
            <TextBox Height="25" Text = "{Binding SelectedModule.Description, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <Button Content="Save Changes" Command="{Binding SaveModuleCommand, UpdateSourceTrigger=PropertyChanged}"  Height="25"/>
            <Button Content="Delete Module" Command="{Binding DeleteModuleCommand, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
            <Button Content="Add Module" Command="{Binding OpenAddModuleCommand, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
        </StackPanel>
    </Grid>
</UserControl>
