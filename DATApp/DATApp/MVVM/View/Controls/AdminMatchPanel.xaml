<UserControl x:Class="DATApp.MVVM.View.Controls.AdminMatchPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DATApp.MVVM.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="150">
    <Grid Margin="10,0,5,0">
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

            <TextBlock Text="Vælg følelse for match" />
            <ComboBox SelectedItem="{Binding SelectedMatch.Emotion}" ItemsSource="{Binding Emotions, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" />

            <TextBlock Text="Vælg Behandlingshierarki for match" />
            <ComboBox SelectedItem="{Binding SelectedMatch.Level}" ItemsSource="{Binding Levels, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" />


            <Button Content="Save Changes" Command="{Binding SaveMatchCommand, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
            <Button Content="Delete Match" Command="{Binding DeleteMatchCommand, UpdateSourceTrigger=PropertyChanged}" Height="25"/>

        </StackPanel>
    </Grid>
</UserControl>
