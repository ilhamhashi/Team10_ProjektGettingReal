<Window x:Class="DATApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:DATApp" 
        xmlns:viewmodel="clr-namespace:DATApp.MVVM.ViewModel"
        xmlns:view="clr-namespace:DATApp.MVVM.View"
        xmlns:controls="clr-namespace:DATApp.MVVM.View.Controls"   
        mc:Ignorable="d"
        Height="700" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>

    <Border Background="AliceBlue"
        CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="DAT-linien.dk"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Foreground="Black"
               FontSize="22"
               Margin="20,0,0,0"/>

            <controls:AdminMenuBar Margin="10,10,0,515" Grid.Column="1" HorizontalAlignment="Left" Width="592" Grid.RowSpan="2"/>

            <ContentControl Grid.Row="1"
                            Grid.Column="0"
                            Margin="10"/>

            <ContentControl Grid.Row="1"
                            Margin="10,10,10,10"
                            Content="{Binding CurrentView}" Grid.Column="1"/>

            <Button Name = "CloseButton" Content = "Luk" Click = "CloseButton_Click" Grid.Column = "1" Margin = "634,26,28,19" />
            <Button x:Name = "LoginButton" Content = "Log ind" Click = "LoginButton_Click" Grid.Column = "1" Margin = "554,27,108,18" />
        </Grid>
    </Border>
</Window>
