<Window x:Class="DATApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:DATApp" 
        xmlns:viewmodel="clr-namespace:DATApp.MVVM.ViewModel"
        xmlns:controls="clr-namespace:DATApp.MVVM.View.Controls"   
        mc:Ignorable="d"
        WindowStyle="None"
        Height="600" Width="600"
        Background="Transparent">

    <Window.DataContext>
        <viewmodel:MainWindowViewModel />
    </Window.DataContext>

    <Border Background="AliceBlue"
        CornerRadius="20"
            BorderBrush="LightGray"
            BorderThickness="2">

        <Grid Margin="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="45"/>
                <RowDefinition/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="DAT-linien.dk"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="Black"
                       FontSize="22" />

            <ContentControl Grid.Row="1"
                            Margin="-18,0,-18,0"
                            Content="{Binding CurrentMenuView}"/>

            <ContentControl Grid.Row="2"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Margin="10,0,10,0"
                            Content="{Binding CurrentView}" Height="381"/>

            <Button Width="35" Height="35" x:Name = "CloseButton" Content = "X" HorizontalAlignment="Right" Command="{Binding CloseMainWindowCommand}" />
            <Button x:Name="fortsætButton" Content = "Fortsæt" Command="{Binding MenuViewCommand}" Height="20"  Width="150" VerticalAlignment="Bottom" Margin="0,0,0,45" Visibility="Collapsed" Click="Button_Click" Grid.Row="2"/>
            
        </Grid>
    </Border>
</Window>
